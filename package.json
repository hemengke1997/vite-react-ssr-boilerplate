{
  "name": "vite-react-ssr-boilerplate",
  "version": "1.0.0",
  "author": "hemengke1997 <https://github.com/hemengke1997>",
  "description": "ssr boilerplate based on vite/vite-plugin-ssr/react",
  "keywords": [
    "vite",
    "ssr",
    "template",
    "boilerplate",
    "react ssr",
    "vite ssr"
  ],
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx server/index.ts",
    "start:prod": "cross-env NODE_ENV=production tsx server/index.ts",
    "start:test": "cross-env NODE_ENV=test tsx watch server/index.ts",
    "build": "cross-env NODE_ENV=production vite build --mode production && vite build --ssr --mode production",
    "build:test": "cross-env NODE_ENV=test vite build --mode test && vite build --ssr --mode test",
    "report": "cross-env REPORT=true vite build",
    "server:local": "cross-env NODE_ENV=test tsx watch server/index.ts",
    "preview": "vite preview",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "bump:deps": "pnpm update --i --L",
    "lint": "eslint . --fix",
    "tsc": "tsc",
    "// 以下Docker部署相关": "//",
    "bundle:server": "cross-env BUNDLE_DIR=server FILE_NAME=index tsx scripts/IIFEBundleScript",
    "bundle:pm2": "cross-env BUNDLE_DIR=server FILE_NAME=pm2 tsx scripts/IIFEBundleScript",
    "// 以下传统部署相关": "//",
    "release": "tsx scripts/release",
    "pm2:dev": "npx --yes --ignore-scripts pnpm i && cross-env NODE_ENV=development tsx server/pm2 --tsconfig tsconfig.pm2.json",
    "pm2:test": "npx --yes --ignore-scripts pnpm i && cross-env NODE_ENV=test tsx server/pm2 --tsconfig tsconfig.pm2.json",
    "pm2:prod": "npx --yes --ignore-scripts pnpm i && cross-env NODE_ENV=production tsx server/pm2 --tsconfig tsconfig.pm2.json"
  },
  "dependencies": {
    "@ant-design/cssinjs": "^1.1.1",
    "@minko-fe/style-object-to-string": "^0.0.1",
    "ahooks": "^3.7.2",
    "antd": "5.0.5",
    "axios": "1.2.1",
    "change-case": "^4.1.2",
    "classnames": "^2.3.2",
    "dayjs": "^1.11.7",
    "framer-motion": "^7.6.19",
    "i18next": "^22.1.5",
    "i18next-browser-languagedetector": "^7.0.1",
    "i18next-http-middleware": "^3.2.1",
    "lodash-es": "^4.17.21",
    "normalize-path": "^3.0.0",
    "normalize-url": "^8.0.0",
    "query-string": "^7.1.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-helmet": "^6.1.0",
    "react-i18next": "^12.1.1",
    "react-use": "^17.4.0",
    "vite": "^4.0.0",
    "vite-plugin-ssr": "^0.4.54",
    "zustand": "^4.1.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@minko-fe/commitlint-config": "^1.2.3",
    "@minko-fe/eslint-config": "^1.2.3",
    "@minko-fe/postcss-pxtorem": "^1.1.0",
    "@minko-fe/postcss-pxtoviewport": "^1.1.0",
    "@minko-fe/prettier-config": "^1.2.3",
    "@minko-fe/tsconfig": "^1.2.3",
    "@types/compression": "^1.7.2",
    "@types/cross-spawn": "^6.0.2",
    "@types/express": "^4.17.14",
    "@types/fs-extra": "^9.0.13",
    "@types/headroom.js": "^0.12.2",
    "@types/inquirer": "^9.0.3",
    "@types/lodash-es": "^4.17.6",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.11.12",
    "@types/normalize-path": "^3.0.0",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.9",
    "@types/react-helmet": "^6.1.6",
    "@types/shelljs": "^0.8.11",
    "@vercel/node": "^2.8.0",
    "@vitejs/plugin-legacy": "3.0.0",
    "@vitejs/plugin-react": "3.0.0",
    "autoprefixer": "^10.4.13",
    "browserslist": "^4.21.4",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "esbuild": "^0.16.3",
    "eslint": "^8.29.0",
    "eslint-define-config": "^1.12.0",
    "execa": "^6.1.0",
    "express": "^4.18.2",
    "fast-glob": "^3.2.12",
    "fs-extra": "^11.1.0",
    "get-tsconfig": "^4.2.0",
    "http-proxy-middleware": "^2.0.6",
    "lint-staged": "^13.1.0",
    "minimist": "^1.2.7",
    "picocolors": "^1.0.0",
    "pm2": "5.2.2",
    "pnpm": "^7.18.1",
    "postcss": "^8.4.19",
    "prettier": "^2.8.1",
    "rollup": "3.7.0",
    "rollup-plugin-visualizer": "^5.8.3",
    "simple-git-hooks": "^2.8.1",
    "sirv": "^2.0.2",
    "tailwindcss": "^3.2.4",
    "terser": "5.16.1",
    "tsx": "^3.12.1",
    "typescript": "^4.9.4",
    "vite-plugin-i18next-loader": "^2.0.2",
    "vite-plugin-public-typescript": "^1.0.4",
    "vite-plugin-time-reporter": "^2.0.0"
  },
  "engines": {
    "node": ">=16.14.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "commit-msg": "pnpm exec tsx scripts/verifyCommit.ts $1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "vite": "4.0.*"
      }
    }
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "!(dist/**)/*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix"
    ]
  }
}
